
package calculator;
import java.util.Scanner;

public class Calculator {

    
    public static void main(String[] args) {
          Scanner input = new Scanner(System.in);
          System.out.println("Enter first number before calculation:");
int a = input.nextInt();
{
    
    System.out.println("What second number after calculation");
    int b = input.nextInt();
    
    System.out.println("Enter these number only for calculation:");
    System.out.println("1 = ADD, 2 = SUBSTRACT, 3 = MULTIPLY, 4 = DIVIDE");
    int c = input.nextInt();
    
    switch (c){
        case 1:
            System.out.println(a+"+"+b+"=");
            System.out.println(a+b);
            break;
            case 2:
                System.out.println(a+"-"+b+"=");
            System.out.println(a-b);
            break;
            case 3:
                System.out.println(a+"*"+b+"=");
            System.out.println(a*b);
            break;
            case 4:
                System.out.println(a+"/"+b+"=");
            System.out.println(a/b);
            break;
            default:
                System.out.println("WROND NUMBER, try again");
break;
    }
}
    }
    
}
